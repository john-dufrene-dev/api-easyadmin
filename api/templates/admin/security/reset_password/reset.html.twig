{% extends 'admin/layout/_default.html.twig' %}
{% trans_default_domain 'admin' %}

{% block body_class 'page-login' %}

{% block page_title %} {{ 'reset.title.password'|trans }} {% endblock %}

{% block wrapper_wrapper %}
    <div class="login-wrapper">

        <header class="main-header mb-2">
            <div id="header-logo"> <h4 class="logo">{{ 'reset.title.password'|trans }}</h4> </div>
        </header>

        <section class="content">

            {% if resetForm.vars.errors.form.getErrors(true)|length %}
                {% for error in resetForm.vars.errors.form.getErrors(true) %}
                <div class="w-100 alert alert-danger rounded mb-3">
                    <i class="fas fa-times-circle mr-1"></i>
                    {{ error.message }}
                </div>
                {% endfor %}
            {% endif %}

            {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control w-100'}}) }}
            </div>

            <div class="form-group">
                {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control w-100'}}) }}
            </div>

            <div class="form-group field-button d-grid gap-2">
                <button class="btn btn-primary btn-lg btn-block">Reset password</button>
                {{ form_end(resetForm) }}
            </div>
            
        </section>
        
    </div>
{% endblock %}
